# Database Configuration
DATABASE_URL=mysql://raworc:raworc@localhost:3307/raworc

# JWT Configuration
JWT_SECRET=change-me-in-production

# Server Configuration
RAWORC_HOST=0.0.0.0
RAWORC_PORT=9000

# Agent Configuration
AGENT_IMAGE=python:3.11-slim
AGENT_CPU_LIMIT=0.5           # Number of CPUs (0.5 = half CPU)
AGENT_MEMORY_LIMIT=536870912  # Memory in bytes (512MB)
AGENT_DISK_LIMIT=1073741824   # Disk in bytes (1GB)
# AGENT_NETWORK=raworc-network  # Optional: specify custom network

 

# Logging
RUST_LOG=info
# Options: trace, debug, info, warn, error

# Ollama Runtime (LLM) Resource Tuning (recommended defaults)
# Adjust down if your host has less RAM.
# scripts/start.sh loads .env and uses these when starting the `ollama` component.
OLLAMA_CPUS=4
OLLAMA_MEMORY=24g
OLLAMA_SHM_SIZE=24g
# OLLAMA_ENABLE_GPU=true      # Uncomment if GPU is available

# Ollama HTTP timeout (seconds) for /api/chat
OLLAMA_TIMEOUT_SECS=120

# Ollama model selection (default pinned to 20B)
OLLAMA_MODEL=gpt-oss:20b
